  }

  .logo-preview_modal .logo-preview_inner-modal .actions > * {
    display: block;
    width: 100%;
    max-width: 80vw;
  }

  .logo-preview_modal .logo-preview_inner-modal .actions > button {
    background: rgb(66, 66, 66);
    color: #fff;
    border-radius: 1000px;
    padding: 0.25rem 2rem;
    width: 50%;
  }

  .logo-preview_modal #modal-preview-form button[type="submit"] {
    margin: 20px 0;
  }

  .logo-preview_modal #modal-preview-form label,
  .logo-preview_modal #modal-preview-form input {
    cursor: pointer;
  }

