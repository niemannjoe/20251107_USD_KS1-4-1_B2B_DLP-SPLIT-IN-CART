    -moz-appearance: checkbox;
    min-width: 10px;
    min-height: 10px;
  }

  .logo-preview_modal button[type="submit"] {
    position: relative;
  }

  .button-text {
    transition: all 0.2s;
  }

  .button-loading .button-text {
    visibility: hidden;
    opacity: 0;
  }

  .button-loading::after {
    content: "";
    position: absolute;
    width: 16px;
    height: 16px;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    border: 4px solid transparent;
    border-top-color: #ffffff;
    border-radius: 50%;
    animation: button-loading-spinner 1s ease infinite;
  }

  .logo-preview_modal .flickity-prev-next-button.next {
    right: 10px !important;
  }

  @keyframes button-loading-spinner {
    from {
      transform: rotate(0turn);
    }

    to {
      transform: rotate(1turn);
    }
  }


  @media (max-width: 768px) {
    .logo-preview_modal .logo-preview_inner-modal .logo-preview-wrapper {
      grid-template-columns: initial;
    }
  }
</style>

<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<script>
  let modalCarousel;
  const modalElement = document.querySelector(".logo-preview_modal");
  const modalInnerElement = document.querySelector(".logo-preview_inner-modal");
  
  window.document.addEventListener("click", (e) => {
    const openModalButton = document.querySelector(".btn-open-modal");

    if (modalInnerElement && !modalInnerElement.contains(e.target) && (e.target != openModalButton)) {
      modalElement.classList.add("close");
    }
  })

  let finalVariants = [];
  
  window.document.addEventListener("DOMContentLoaded", () => {
    const modalForm = document.getElementById("modal-preview-form");
    
    if (modalForm) {
      setTimeout( () => {
        clearVariantElements();
      }, 200)

      modalForm.addEventListener("submit", (e) => {
        e.preventDefault();
        e.stopImmediatePropagation();
        // modalElement.classList.add("close");

        const notesTextarea = document.getElementById("notes");
        const notesFromModal = notesTextarea.value;
        const submitButton = modalForm.querySelector("button[type='submit']");

        if (submitButton) submitButton.classList.add("button-loading");

        const fileInput = document.querySelector(".logo-preview_input-element");
        const promises = finalVariants.map(variant => new Promise((resolve) => {
          uploadFiles(fileInput.files[0], dataURLtoFile(variant.previewDataUrl, "preview.png"),variant.variantName).then(() => resolve());
        }));
        Promise.allSettled([...promises /*, addNote(notesFromModal)*/ ]).then(() => {
          setTimeout(() => {
            const addToCartForm = document.getElementById("modal-preview-form");
            if(typeof addToCartForm.submit === "function") {
              fetch("/cart/add.js", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json"
                },
                body: JSON.stringify({
                  items: [{
                    id: "{{ linklists.gift-wrapping.links.first.object.variants.first.id }}",
                    quantity: 1                  
                  }]
                })
              }).then((res) => res.json()).then(res => {
                Object.entries(res).map(([key, value]) => {
                  console.log(key);
                  console.log(value);
                })
              })
  
              addToCartForm.submit();
            }
          }, 1000);
        })
      })
    }
  })

  function changeCheckbox(target) {
    const name = target.getAttribute("name");
    const checkboxForm = document.querySelector(`input.modal-required[name="${name}"]`);
    if (checkboxForm) checkboxForm.checked = target.checked;
  }

  function clearVariantElements() {

    const modalCheckboxes = document.querySelectorAll("#modal-preview-form input[type='checkbox']");
    const logoInput = document.querySelector(".logo-preview_input-element");
    const quantityInputs = document.querySelectorAll(".quantity-selector-input");
    const modalRequiredInputs = document.querySelectorAll("input.modal-required");


    if (logoInput) logoInput.value = "";

    modalCheckboxes.forEach( modalCheckbox => {
      modalCheckbox.checked = false;
    })

    modalRequiredInputs.forEach( modalRequiredInput => {
      modalRequiredInput.checked = false;
      modalRequiredInput.value = false;
    })

    quantityInputs.forEach( quantityInput => {
      quantityInput.value = 0;
    })
  }

  function openModal(variants = []) {
    if (variants.length && typeof getSessionInformation === "function") {
      const payload = getSessionInformation();
      if (payload) {
        const previewCarousel = window.document.querySelector(".logo-preview_carousel-wrapper");    
        previewCarousel.innerHTML = "";
        const carousel = window.document.createElement("div");
        carousel.classList.add("logo-preview_carousel");
        finalVariants = [];

        for(let i = 0; i < variants.length; i++) {
          const variant = variants[i];
          finalVariants.push(payload[variant]);
          const previewImageSource = payload[variant].previewDataUrl;
          
          const slideElement = document.createElement("div");
          slideElement.classList.add("carousel-cell");
          slideElement.innerHTML = `
          <img src="${previewImageSource}" alt="img-${i}-${variant}" >
          `;
          carousel.appendChild(slideElement);
          
          const logoImageSource = payload[variant].logoDataUrl;
          const linkToLogo = document.getElementById("logo-link");
          linkToLogo.setAttribute("download", payload[variant].logoName);
          linkToLogo.href = logoImageSource;
        }
        previewCarousel.appendChild(carousel);
        setTimeout(() => {
          const hasMultipleCells = finalVariants.length > 1;
          
          if (hasMultipleCells) {
            modalCarousel = new Flickity(carousel, { "freeScroll": true, imagesLoaded: true });
          } else {
            modalCarousel = new Flickity(carousel, { "freeScroll": true, imagesLoaded: true, pageDots: false, prevNextButtons: false });
          }
          modalCarousel.resize();
        }, 100);
        
      }
    }
    const listOrderDetails = document.querySelector(".modal_line-items");
    listOrderDetails.innerHTML = "";
    const inputs = document.querySelectorAll("input.quantity-selector-input");
    for (let i = 0; i < inputs.length; i++) {
      if (inputs[i].value !== 0 && inputs[i].value !== "0") {
        const optionValue = inputs[i].value;    
        const optionTitle = inputs[i].closest(".variant-row")? inputs[i].closest(".variant-row").getAttribute("data-options") : "Default variant";
        const optionElement = document.createElement("li");
        optionElement.innerHTML = `
            <p>${optionTitle}</p>
            <span>${optionValue}</span>
        `;
        listOrderDetails.appendChild(optionElement);
      }
    }

    modalElement.classList.remove("close");

  }
</script>
