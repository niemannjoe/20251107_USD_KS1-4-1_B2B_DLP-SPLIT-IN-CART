<div class="logo-preview_modal close">
  <div class="logo-preview_inner-modal">
    <h3>{{ product.title }}</h3>
    {%- assign selected_variant = product.selected_or_first_available_variant -%}
    {%- assign step_quantity = variant.product.metafields.custom.step_quantity | default: variant.quantity_rule.increment | default: 1 -%}
       {%- assign variantSku = selected_variant.sku | split: "-" | first -%}
       
    <span class="product-meta__sku" {% if variantSku == blank %}style="display: none"{% endif %}>Item#
      <span class="product-meta__sku-number">{{ variantSku }}</span>
    </span>
    <section class="logo-preview-wrapper">
      <article class="logo-preview_carousel-wrapper">
        <div class="logo-preview_carousel"></div>
      </article>
      <article class="logo-preview_information">
        <div>
          <h4>Artwork</h4>
          <p>Dealership Logo:
            <a href="#" target="_blank" id="logo-link">Click Here</a>
          </p>
          <p>Max Size: 3.5" x 1.75"</p>
          <label for="notes">Customization Notes:</label>
          <textarea id="notes" name="notes"></textarea>
        </div>
        <div class="order-details">
          <h4>Order Details</h4>
            <ul class="modal_line-items"></ul>
        </div>
      </article>
    </section>
    <form class="actions" id="modal-preview-form">
      <label>
        <input type="checkbox" required name="right-to-use" onchange="changeCheckbox(this)">
        <span>I hereby certify to have the lawful right to use the logo submitted on this item.</span>
      </label>
      <label>
        <input type="checkbox" required name="preview-approved" onchange="changeCheckbox(this)">
        <span>I have reviewed and approved the design above.
          <small>*In case colors and dimensions need to be adjusted to better show on the product, we will email you a new mock-up for final approval</small>
        </span>
      </label>
      <button
        class="modal-submit-button btn btn--primary"
        type="button"
        @click.prevent="
          button_loading = true;

          (()=>{
            const form = document.getElementById('modal-preview-form');
            const id = Number(form?.querySelector('input[name=id]')?.value || 0);
            if (!id) {
              button_loading = false;
              alert('Please select a variant before adding to cart.');
              return;
            }

            // current modal image (used as fallback if hidden preview isn't set yet)
            const img = document.querySelector('.logo-preview_modal .logo-preview_carousel img');

            // hidden inputs your custom JS keeps in sync (CDN links)
            const previewInput = form.querySelector('input[name=&quot;properties[_PreviewImage]&quot;]');
            const vectorInput  = form.querySelector('input[name=&quot;properties[_VectorImage]&quot;]');
            const variantInput = form.querySelector('input[name=&quot;properties[_VariantOption]&quot;]');

            // pick the RIGHT image urls
            const previewUrl = (previewInput?.value || '')
              || (img?.getAttribute('data-zoom') || img?.src || '');
            const vectorUrl  = (vectorInput?.value || ''); // vector is stored as CDN/DataURL by your sync

            const variantOpt = variantInput?.value || '';
            const notes = document.getElementById('notes')?.value || '';
            const rightToUse = form.querySelector('input[name=right-to-use]')?.checked ? 'Yes' : 'No';
            const previewApproved = form.querySelector('input[name=preview-approved]')?.checked ? 'Yes' : 'No';

            const formBody = {
              items: [
                {
                  id,
                  quantity: {{ step_quantity }},
                  properties: {
                    _PreviewImage: previewUrl,
                    _VectorImage:  vectorUrl,
                    'Customization Notes': notes,
                    'Right to Use': rightToUse,
                    'Preview Approved': previewApproved,
                  },
                },
              ],
            };

            // addCartItem(variantID, sellingPlanId, quantity, openCart, enableAudio, addProperties, formBody)
            addCartItem(id, 0, {{ step_quantity }}, true, false, true, formBody)
              .then(() => {
                const modalEl = document.querySelector('.logo-preview_modal');
                if (modalEl) modalEl.classList.add('close');

                try {
                  const submitBtn = document.querySelector('.modal-submit-button');
                  const openId = String(submitBtn?.getAttribute('data-open-variant-id') || id);

                  const candidates = document.querySelectorAll('.logo-render-popup');
                  for (const el of candidates) {
                    const vid =
                      el.getAttribute('data-variant-id') ||
                      el.querySelector('[data-variant-id]')?.getAttribute('data-variant-id') ||
                      '';
                    if (String(vid) === openId) {
                      el.classList.remove('logo-render-popup');
                      break;
                    }
                  }
                } catch (e) {
                  // ignore
                }
              })

          })();
        "
      >
        <span class="button-text modal-button">Add to Cart</span>
      </button>
    </form>
  </div>
</div>

