<!-- sections/contact.liquid -->
{% comment %}
  Contact form section.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.

  Recommendations:
  - Use this section to create a contact form.
{% endcomment %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      flex
      {{ section.settings.layout_x_alignment }}
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% else %}
        window--full
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        flex w-full flex-col gap-4
        {% if section.settings.enable_max_width %}
          max-w-prose
        {% endif %}
      "
    >
      {% unless section.settings.heading == blank %}
        <h3 class="type__heading-1">{{ section.settings.heading }}</h3>
      {% endunless %}

      {% assign form_id = section.id | append: '-contact' %}
      {% form 'contact', id: form_id %}
        <div class="flex flex-col items-start gap-4">
          {% if form.posted_successfully? %}
            <div class="color__bg-shade-2 border--radius space-y-4 p-4">
              {{ 'info.form_success' | t }}
            </div>
          {% endif %}
          {% if form.errors %}
            <div class="color__bg-shade-2 border--radius space-y-4 p-4">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="w-full">
            <label
              for="{{ section.id }}_contact_name_contact"
            >
              {{ 'labels.name' | t }}
            </label>
            <input
              id="{{ section.id }}_contact_name_contact"
              type="text"
              name="contact[name]"
              placeholder="{{ 'labels.name' | t }}"
              value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            >
          </div>

          <div class="w-full">
            <label
              for="{{ section.id }}_contact_email"
            >
              {{ 'labels.email' | t }}
            </label>
            <input
              id="{{ section.id }}_contact_email"
              type="email"
              name="contact[email]"
              placeholder="{{ 'labels.email' | t }}"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              spellcheck="false"
              autocapitalize="off"
            >
          </div>

          {% for block in section.blocks %}
            <div class="w-full">
              {% case block.settings.input_type %}
                {% when 'textarea' %}
                  <label
                    for="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                  >
                    {{ block.settings.input_label }}
                  </label>
                  <textarea
                    id="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                    rows="10"
                    name="contact[{{ block.settings.input_label | handle }}]"
                    placeholder="{{ block.settings.input_placeholder }}"
                  ></textarea>

                {% when 'input' %}
                  <label
                    for="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                  >
                    {{ block.settings.input_label }}
                  </label>
                  <input
                    id="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                    type="text"
                    name="contact[{{ block.settings.input_label | handle }}]"
                    placeholder="{{ block.settings.input_placeholder }}"
                    spellcheck="false"
                  >

                {% when 'checkbox' %}
                  <label
                    class="flex items-center gap-2"
                    for="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                  >
                    <input
                      id="{{ section.id }}_contact_{{ block.settings.input_label | handle }}"
                      name="contact[{{ block.settings.input_label | handle }}]"
                      type="checkbox"
                    >
                    <span>
                      {{ block.settings.input_label }}
                    </span>
                  </label>
              {% endcase %}
            </div>
          {% endfor %}

          <button
            class="btn {{ section.settings.color_button }}"
            type="submit"
          >
            {{ 'actions.send' | t }}
          </button>
        </div>
      {% endform %}
    </div>
  </div>
</section>

