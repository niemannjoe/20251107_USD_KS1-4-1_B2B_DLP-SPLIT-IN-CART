<!-- sections/banner.liquid -->
{% comment %}
  This is a banner component with either a background image or video and a text overlay.

    Globals:
    - layout_horizontal: {string} Class string to set horizontal margin.
    - enable_animations: {boolean} Global setting to determine if animations are enabled.
    - layout_header_overlap: {integer} Size when setting header overlap.

    Recommendations:
    - Use images or videos that contrast well with the text overlay.
{% endcomment %}

{% comment %} Set properties for image {% endcomment %}
{% liquid
  if section.settings.show_entire_image
    assign image_classes = ' object-contain'
  else
    assign image_classes = ' object-cover h-full w-full'
  endif

  assign enable_lazy_load = true
  if section.index == 1
    assign enable_lazy_load = false
  endif
%}

<section
  class="
    group
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {% if section.settings.enable_border_margin %}
      padding--gap
    {% endif %}
  "
  x-data="
    {
      mouse_x: 0,
      mouse_y: 0
    }
  "
  @mousemove="
    mouse_x = $event.clientX - $refs.banner.getBoundingClientRect().left;
    mouse_y = $event.clientY - $refs.banner.getBoundingClientRect().top;
  "
  x-ref="banner"
>
  {% if section.settings.url == blank %}
    <div
      id="{{ section.id }}"
      class="
        group/banner
        relative flex items-center justify-center overflow-clip !no-underline hover:no-underline hover:!opacity-100
        {{ section.settings.color_scheme }}
        {% if section.settings.enable_border_margin %}
          border--radius
        {% endif %}
      "
      {% if section.settings.url != blank %}
        tabindex="-1"
      {% endif %}
    >
  {% else %}
    <a
      href="{{ section.settings.url }}"
      id="{{ section.id }}"
      class="
        group/banner
        relative flex items-center justify-center overflow-clip !no-underline hover:no-underline hover:!opacity-100
        {{ section.settings.color_scheme }}
        {% if section.settings.enable_border_margin %}
          border--radius
        {% endif %}
      "
      {% if section.settings.url != blank %}
        tabindex="-1"
      {% endif %}
    >
  {% endif %}

  {% comment %} Media {% endcomment %}
  <div
    class="
      absolute top-0 h-full w-full
      {% if settings.enable_animations %}
        motion-safe:scroll-blurin-2-10
      {% endif %}
    "
  >
    {% comment %} Image background {% endcomment %}
    <div
      class="animation-1000 absolute h-full w-full"
    >
      {% comment %} Placeholder {% endcomment %}
      {% if section.settings.show_image
        and section.settings.image_background_desktop == blank
        and section.settings.image_background_mobile == blank
      %}
        <div
          class="
            h-full w-full
            {% unless section.settings.layout_y_spacing == 'image' %}
              absolute
            {% endunless %}
          "
        >
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'w-full h-full' }}
        </div>
      {% endif %}

      {% comment %} Desktop image {% endcomment %}
      {% if section.settings.image_background_desktop and section.settings.show_image %}
        <div class="absolute h-full w-full">
          {% render 'component__image',
            image: section.settings.image_background_desktop,
            max_width: 5760,
            parent_class: 'h-full hidden md:block',
            container_class: 'h-full w-full z-10',
            image_class: image_classes,
            crop_class: image_classes,
            enable_lazy_load: enable_lazy_load
          %}
        </div>
      {% endif %}

      {% comment %} Mobile image {% endcomment %}
      {% if section.settings.image_background_mobile == blank and section.settings.show_image %}
        {% if section.settings.image_background_desktop and section.settings.show_image %}
          <div class="absolute h-full w-full">
            {% render 'component__image',
              image: section.settings.image_background_desktop,
              max_width: 900,
              parent_class: 'h-full block md:hidden',
              container_class: 'w-full h-full z-10',
              image_class: image_classes,
              crop_class: image_classes,
              enable_lazy_load: enable_lazy_load
            %}
          </div>
        {% endif %}
      {% else %}
        <div class="absolute h-full w-full">
          {% render 'component__image',
            image: section.settings.image_background_mobile,
            max_width: 900,
            parent_class: 'h-full block md:hidden',
            container_class: 'w-full h-full z-10',
            image_class: image_classes,
            crop_class: image_classes,
            enable_lazy_load: enable_lazy_load
          %}
        </div>
      {% endif %}
    </div>

    {% comment %} Video background {% endcomment %}
    {% unless section.settings.video_background == blank %}
      <div
        class="
          absolute bottom-0 left-0 right-0 top-0 z-10
          {% unless section.settings.show_video_background_mobile %}
            hidden md:block
          {% endunless %}
        "
      >
        {% render 'component__video',
          video: section.settings.video_background,
          container_class: 'max-w-none md:min-h-full min-w-full h-full',
          video_class: 'object-cover',
          enable_custom_controls: false,
          enable_mute_toggle: false,
          enable_autoplay: true,
          enable_loop: true
        %}
      </div>
    {% endunless %}
  </div>

  {% comment %} Banner content {% endcomment %}
  <div
    class="
      relative z-10 h-full w-full
      {% if settings.enable_animations %}
        {% unless section.settings.layout_y_spacing == 'min-h-[100px] md:min-h-[150px]' %}
          motion-safe:scroll-blurinandout-5-100
        {% endunless %}
      {% endif %}
    "
    {% if section.settings.enable_gradient %}
      style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) );"
    {% endif %}
  >
    <div
      {% if section.settings.layout_y_spacing == 'adapt' %}
        class="banner-aspect-ratio"
      {% endif %}
    >
      <div
        class="
          flex h-full w-full flex-row flex-wrap py-8
          {{ section.settings.layout_x_alignment }}
          {{ section.settings.layout_y_alignment }}
          {{ section.settings.layout_y_spacing }}
          {% if section.settings.enable_margin %}
            {{ settings.x_margin }}
          {% else %}
            window--full
          {% endif %}
        "
      >
        <div
          class="
            flex w-full flex-col gap-4
            {% if section.settings.enable_max_width %}max-w-prose{% endif %}
            {% if section.settings.layout_x_alignment contains 'text-center' %} items-center{% endif %}
            {% if section.settings.layout_x_alignment contains 'text-right' %} items-end{% endif %}
            {% if section.settings.enable_background_overlay %}
              p-4 w-full border--radius {{ section.settings.color_scheme }}
            {% endif %}
          "
        >
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'image' %}
                {% capture image_size %}
                    height: {{ block.settings.image_height }}px;
                    width: {{ block.settings.image_height | times: block.settings.image.aspect_ratio }}px;
                  {% endcapture %}
                <div
                  class="relative block items-center"
                  style="{{ image_size }}"
                >
                  {{
                    block.settings.image
                    | image_url: width: 400
                    | image_tag: class: 'w-full h-full !bg-transparent object-contain', alt: block.settings.image.alt
                  }}
                </div>

              {% when 'heading' %}
                <h1
                  class="                      {{ section.settings.color_text }}"
                >
                  {{ block.settings.content }}
                </h1>

              {% when 'content' %}
                <div
                  class="
                    rte
                    {{ section.settings.color_text }}
                  "
                >
                  {{ block.settings.content }}
                </div>

              {% when 'buttons' %}
                <div
                  class="
                    flex flex-wrap gap-4 md:flex-nowrap
                    {% if section.settings.layout_x_alignment contains 'text-center' %}justify-center{% endif %}
                    {% if section.settings.layout_x_alignment contains 'text-right' %}justify-end{% endif %}
                  "
                >
                  {% unless block.settings.button_label == blank %}
                    {% if section.settings.url == blank %}
                      <a
                        href="{{ block.settings.button_url }}"
                        class="{{ block.settings.color_button }}"
                      >
                    {% else %}
                      <button
                        class="{{ block.settings.color_button }}"
                      >
                    {% endif %}
                    {{ block.settings.button_label }}
                    {% if section.settings.url == blank %}</a>{% else %}</button>{% endif %}
                  {% endunless %}
                  {% unless block.settings.secondary_button_label == blank %}
                    {% if section.settings.url == blank %}
                      <a
                        href="{{ block.settings.secondary_button_url }}"
                        class="{{ block.settings.secondary_color_button }}"
                      >
                    {% else %}
                      <button
                        class="{{ block.settings.secondary_color_button }}"
                      >
                    {% endif %}
                    {{ block.settings.secondary_button_label }}
                    {% if section.settings.url == blank %}</a>{% else %}</button>{% endif %}
                  {% endunless %}
                </div>

              {% when 'newsletter' %}
                <div
                  class="
                    w-full
                    {{ section.settings.color_text }}
                  "
                >
                  {% assign form_id = section.id | append: '-newsletter' %}
                  {% form 'customer', id: form_id, class: 'flex w-full gap-2 flex-col' %}
                    {% if form.posted_successfully? %}
                      <div class="color__bg-shade-2 border--radius space-y-4 p-4">
                        {{ section.settings.success }}
                      </div>
                    {% endif %}
                    {% if form.errors %}
                      <div class="color__bg-shade-2 border--radius space-y-4 p-4">
                        {{ form.errors | default_errors }}
                      </div>
                    {% endif %}

                    {% unless block.settings.content == blank %}
                      <div
                        class="
                          rte
                          {{ section.settings.color_text }}
                        "
                      >
                        {{ block.settings.content }}
                      </div>
                    {% endunless %}

                    <div
                      class="flex w-full gap-4"
                    >
                      <label
                        class="sr-only"
                        for="{{ section.id }}_customer_email_banner"
                      >
                        {{ 'labels.email' | t }}
                      </label>
                      <input
                        id="{{ section.id }}_customer_email_banner"
                        class="
                          flex-grow
                          {{ section.settings.color_text }}
                        "
                        placeholder="{{ 'actions.email_placeholder' | t }}"
                        name="contact[email]"
                        type="email"
                        autocorrect="off"
                        autocapitalize="off"
                      >
                      <button
                        class="btn btn--small btn--secondary shrink-0 whitespace-nowrap"
                        type="submit"
                      >
                        <span class="btn__content">{{ block.settings.button_label }}</span>
                      </button>
                    </div>

                    {% unless block.settings.disclaimer == blank %}
                      <div class="type--smaller space-y-2 opacity-50">
                        {{ block.settings.disclaimer }}
                      </div>
                    {% endunless %}
                  {% endform %}
                </div>

              {% when 'countdown' %}
                <div
                  class="
                    color__bg-shade-2
                    w-full
                    {{ section.settings.color_text }}
                  "
                  x-data="
                    {
                      expired: false,
                      timer: (expiry) => {
                        return {
                          expiry: expiry,
                          remaining:null,
                          init() {
                            this.setRemaining()
                            setInterval(() => {
                              this.setRemaining();
                            }, 1000);
                          },
                          setRemaining() {
                            const diff = this.expiry - new Date().getTime();
                            this.remaining =  parseInt(diff / 1000);
                            if (this.remaining < 0) {
                              this.expired = true;
                            }
                          },
                          days() {
                            return {
                              value:this.remaining / 86400,
                              remaining:this.remaining % 86400
                            };
                          },
                          hours() {
                            return {
                              value:this.days().remaining / 3600,
                              remaining:this.days().remaining % 3600
                            };
                          },
                          minutes() {
                            return {
                              value:this.hours().remaining / 60,
                              remaining:this.hours().remaining % 60
                            };
                          },
                          seconds() {
                            return {
                              value:this.minutes().remaining,
                            };
                          },
                          format(value) {
                            return (parseInt(value));
                          },
                          time(){
                            return {
                              days:this.format(this.days().value),
                              hours:this.format(this.hours().value),
                              minutes:this.format(this.minutes().value),
                              seconds:this.format(this.seconds().value),
                            }
                          },
                        }
                      }
                    }
                  "
                >
                  <div
                    class="
                      border--width border--radius grid grid-cols-4 !border-r-0
                      {{ section.settings.color_border }}
                      {{ section.settings.layout_x_alignment }}
                      {% if section.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                      {% if section.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                    "
                    x-init="init();"
                    x-data="timer(new Date('{{ block.settings.countdown_date }}').getTime());"
                  >
                    <div
                      class="
                        border--r-width flex flex-col p-4
                        {{ section.settings.color_border }}
                        {{ section.settings.layout_x_alignment }}
                        {% if section.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                        {% if section.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                      "
                    >
                      <h3 class="type__heading-2 flex" x-text="time().days"></h3>
                      <p class="type--small flex opacity-75">{{ 'labels.days' | t }}</p>
                    </div>
                    <div
                      class="
                        border--r-width flex flex-col p-4
                        {{ section.settings.color_border }}
                        {{ section.settings.layout_x_alignment }}
                        {% if section.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                        {% if section.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                      "
                    >
                      <h3 class="type__heading-2 flex" x-text="time().hours"></h3>
                      <p class="type--small flex opacity-75">{{ 'labels.hours' | t }}</p>
                    </div>
                    <div
                      class="
                        border--r-width flex flex-col p-4
                        {{ section.settings.color_border }}
                        {{ section.settings.layout_x_alignment }}
                        {% if section.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                        {% if section.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                      "
                    >
                      <h3 class="type__heading-2 flex" x-text="time().minutes"></h3>
                      <p class="type--small flex opacity-75">{{ 'labels.minutes' | t }}</p>
                    </div>
                    <div
                      class="
                        border--r-width flex flex-col p-4
                        {{ section.settings.color_border }}
                        {{ section.settings.layout_x_alignment }}
                        {% if section.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                        {% if section.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                      "
                    >
                      <h3 class="type__heading-2 flex" x-text="time().seconds"></h3>
                      <p class="type--small flex opacity-75">{{ 'labels.seconds' | t }}</p>
                    </div>
                  </div>
                </div>

              {% when 'discount' %}
                <div
                  class="
                    flex w-full
                    {{ section.settings.color_text }}
                  "
                  x-data="
                    {
                      coupon_btn: '{{ 'actions.copy' | t }}'
                    }
                  "
                >
                  <label
                    class="sr-only"
                    for="{{ section.id }}_coupon_{{ forloop.index }}"
                  >
                    {{ block.settings.button_label }}
                  </label>
                  <input
                    id="{{ section.id }}_coupon_{{ forloop.index }}"
                    class="
                      flex-grow
                      {{ section.settings.color_text }}
                    "
                    type="text"
                    placeholder=""
                    autocorrect="off"
                    autocapitalize="off"
                    value="{{ block.settings.code }}"
                    disabled
                  >
                  <button
                    class=" btn btn--small btn--secondary shrink-0 whitespace-nowrap"
                    type="button"
                    @click="
                      copyToClipboard('{{ section.id }}_coupon_{{ forloop.index }}');
                      coupon_btn = '{{ 'actions.copied' | t }}';
                    "
                  >
                    <span
                      class="btn__content"
                      x-text="coupon_btn"
                    >
                      {{ block.settings.button_label }}
                    </span>
                  </button>
                </div>

              {% when 'search' %}
                <form
                  class="
                    relative flex w-full gap-4
                    {{ section.settings.color_text }}
                  "
                  action="{{ routes.search_url }}"
                >
                  <label
                    class="sr-only"
                    for="result-q"
                  >
                    {{ 'labels.search_results' | t }}
                  </label>
                  <input
                    id="result-q"
                    class="
                      color__text flex-grow !px-10
                      {{ section.settings.color_text }}
                    "
                    placeholder="{{ 'actions.search_placeholder' | t }}"
                    name="q"
                    type="text"
                    value="{{ search.terms | escape }}"
                    x-ref="searchInput"
                  >
                  {% render 'component__icon',
                    icon: 'search',
                    size: '20',
                    class: 'absolute !flex items-center
                      top-0 left-2 h-full opacity-50'
                  %}
                  <button
                    class=" btn btn--secondary btn--small shrink-0 whitespace-nowrap"
                    type="submit"
                  >
                    <span class="btn__content">{{ 'labels.search' | t }}</span>
                  </button>
                </form>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  {% if section.settings.url == blank %}</div>{% else %}</a>{% endif %}
</section>

<style>
  .banner-aspect-ratio {
    aspect-ratio: {{ section.settings.image_background_mobile.aspect_ratio }};
  }
  @media (min-width: 768px) {
    .banner-aspect-ratio {
      aspect-ratio: {{ section.settings.image_background_desktop.aspect_ratio }};
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.banner.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.headers.content.content"
    },
    {
      "type": "url",
      "id": "url",
      "label": "t:general.settings.url.label",
      "info": "t:general.settings.url.info",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image_background_desktop",
      "label": "t:general.settings.image_background_desktop.label",
      "info": "t:general.settings.image_background_desktop.info"
    },
    {
      "type": "image_picker",
      "id": "image_background_mobile",
      "label": "t:general.settings.image_background_mobile.label",
      "info": "t:general.settings.image_background_mobile.info"
    },
    {
      "type": "video",
      "id": "video_background",
      "label": "t:general.settings.video_background.label"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "t:general.settings.show_image.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_entire_image",
      "label": "t:general.settings.show_entire_image.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_video_background_mobile",
      "label": "t:general.settings.show_video_on_mobile.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:general.headers.spacing.content"
    },
    {
      "type": "select",
      "id": "layout_y_spacing",
      "label": "t:general.settings.y_spacing.label",
      "options": [
        {
          "value": "min-h-[100px] md:min-h-[150px]",
          "label": "t:general.settings.y_spacing.extra_small.label"
        },
        {
          "value": "min-h-[250px] md:min-h-[350px]",
          "label": "t:general.settings.y_spacing.small.label"
        },
        {
          "value": "min-h-[450px] md:min-h-[550px]",
          "label": "t:general.settings.y_spacing.medium.label"
        },
        {
          "value": "h-[calc(90svh-100px)] md:min-h-[calc(80vh-100px)]",
          "label": "t:general.settings.y_spacing.large.label"
        },
        {
          "value": "adapt h-screen",
          "label": "t:general.settings.y_spacing.extra_large.label"
        },
        {
          "value": "adapt",
          "label": "t:general.settings.y_spacing.adapt_to_image.label"
        }
      ],
      "default": "min-h-[450px] md:min-h-[550px]"
    },
    {
      "type": "header",
      "content": "t:general.headers.color.content"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
      "options": [
        {
          "value": "color__bg-body color__text",
          "label": "t:general.settings.color_scheme.body.label"
        },
        {
          "value": "color__bg-neutral color__text",
          "label": "t:general.settings.color_scheme.neutral.label"
        },
        {
          "value": "color__bg-overlay-1 color__text",
          "label": "t:general.settings.color_scheme.accent_1.label"
        },
        {
          "value": "color__bg-overlay-2 color__text",
          "label": "t:general.settings.color_scheme.accent_2.label"
        },
        {
          "value": "color__bg-overlay-3 color__text",
          "label": "t:general.settings.color_scheme.accent_3.label"
        },
        {
          "value": "color__bg-shade-1 color__text",
          "label": "t:general.settings.color_scheme.shade_1.label"
        },
        {
          "value": "color__bg-shade-2 color__text",
          "label": "t:general.settings.color_scheme.shade_2.label"
        },
        {
          "value": "color__bg-shade-3 color__text",
          "label": "t:general.settings.color_scheme.shade_3.label"
        },
        {
          "value": "color__bg-primary color__primary",
          "label": "t:general.settings.color_scheme.primary.label"
        },
        {
          "value": "color__bg-secondary color__secondary",
          "label": "t:general.settings.color_scheme.secondary.label"
        },
        {
          "value": "color__bg-tertiary color__tertiary",
          "label": "t:general.settings.color_scheme.tertiary.label"
        }
      ],
      "default": "color__bg-overlay-1 color__text"
    },
    {
      "type": "select",
      "id": "color_text",
      "label": "t:general.settings.color_text.label",
      "options": [
        {
          "value": "color__text",
          "label": "t:general.settings.color_text.default.label"
        },
        {
          "value": "color__light",
          "label": "t:general.settings.color_text.force_light.label"
        },
        {
          "value": "color__dark",
          "label": "t:general.settings.color_text.force_dark.label"
        }
      ],
      "default": "color__text"
    },
    {
      "type": "select",
      "id": "color_border",
      "label": "t:general.settings.color_border.label",
      "options": [
        {
          "value": "color__border-divider-1",
          "label": "t:general.settings.color_border.subtle.label"
        },
        {
          "value": "color__border-selected-1",
          "label": "t:general.settings.color_border.strong.label"
        }
      ],
      "default": "color__border-divider-1"
    },
    {
      "type": "checkbox",
      "id": "enable_gradient",
      "label": "t:general.settings.enable_gradient.label",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "enable_background_overlay",
      "label": "t:general.settings.enable_background_overlay.label",
      "default": false
    },
    {
      "type": "header",
      "content": "t:general.headers.style.content"
    },
    {
      "type": "select",
      "id": "style_border",
      "label": "t:general.settings.border_position.label",
      "options": [
        {
          "value": "",
          "label": "t:general.settings.border_position.none.label"
        },
        {
          "value": "border--t-width",
          "label": "t:general.settings.border_position.top.label"
        },
        {
          "value": "border--b-width",
          "label": "t:general.settings.border_position.bottom.label"
        },
