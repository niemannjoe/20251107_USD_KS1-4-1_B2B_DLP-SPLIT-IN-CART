<!-- sections/hotspot.liquid -->
{% comment %}
  This is a banner section that can display hotspot links overlaid on the image.

    Globals:
    - account_matching_tags: {string} Sets the tags that match approved customers.
    - account_hide_product_tag: {string} Sets the tag that hides products from certain accounts.
    - restricted_style: {string} Sets the style for restricted content.
    - layout_horizontal: {string} Class string to set horizontal margin.
    - enable_animations: {boolean} Global setting to determine if animations are enabled.
    - layout_header_overlap: {integer} Size when setting header overlap.

    Recommendations:
    - Use images or videos that contrast well with the text overlay.
{% endcomment %}

{% comment %} Check if approved customer {% endcomment %}
{% liquid
  assign is_approved_customer = false
  if customer and settings.account_matching_tags == blank
    assign is_approved_customer = true
  endif
  if customer.tags contains settings.account_matching_tags
    assign is_approved_customer = true
  endif
  if settings.account_match_b2b and customer.b2b?
    assign is_approved_customer = true
  endif
%}

{% comment %} Set properties for image {% endcomment %}
{% liquid
  if section.settings.show_entire_image
    assign image_classes = ' object-contain'
  else
    assign image_classes = ' object-cover h-full w-full'
  endif

  assign enable_lazy_load = true
  if section.index == 1
    assign enable_lazy_load = false
  endif
%}

<section
  id="{{ section.id }}"
  class="
    group/banner
    relative flex items-center justify-center overflow-x-clip !no-underline hover:no-underline hover:!opacity-100
    {{ section.settings.visibility }}
    {{ section.settings.color_scheme }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
  "
  {% if section.settings.url != blank %}
    tabindex="-1"
  {% endif %}
>
  {% comment %} Media {% endcomment %}
  <div
    class="absolute top-0 h-full w-full overflow-clip"
  >
    {% comment %} Image background {% endcomment %}
    <div
      class="animation-1000 absolute h-full w-full"
    >
      {% if section.settings.image_background_desktop == blank and section.settings.image_background_mobile == blank %}
        <div class="absolute flex h-full w-full">
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'w-full h-full' }}
        </div>
      {% endif %}

      {% comment %} Desktop image {% endcomment %}
      {% if section.settings.image_background_desktop %}
        <div class="absolute h-full w-full">
          {% render 'component__image',
            image: section.settings.image_background_desktop,
            max_width: 5760,
            parent_class: 'h-full hidden md:block',
            container_class: 'h-full w-full z-10',
            image_class: image_classes,
            crop_class: image_classes,
            enable_lazy_load: enable_lazy_load
          %}
        </div>
      {% endif %}

      {% comment %} Mobile image {% endcomment %}
      {% if section.settings.image_background_mobile == blank %}
        {% if section.settings.image_background_desktop %}
          <div class="absolute h-full w-full">
            {% render 'component__image',
              image: section.settings.image_background_desktop,
              max_width: 900,
              parent_class: 'h-full block md:hidden',
              container_class: 'w-full h-full z-10',
              image_class: image_classes,
              crop_class: image_classes,
              enable_lazy_load: enable_lazy_load
            %}
          </div>
        {% endif %}
      {% else %}
        <div class="absolute h-full w-full">
          {% render 'component__image',
            image: section.settings.image_background_mobile,
            max_width: 900,
            parent_class: 'h-full block md:hidden',
            container_class: 'w-full h-full z-10',
            image_class: image_classes,
            crop_class: image_classes,
            enable_lazy_load: enable_lazy_load
          %}
        </div>
      {% endif %}
    </div>
  </div>

  {% comment %} Banner content {% endcomment %}
  <div
    class="
      relative z-10 h-full w-full
      {% if settings.enable_animations %}
        {% unless section.settings.layout_y_spacing == 'min-h-[250px] md:min-h-[350px]' %}
          motion-safe:scroll-blurinandout-5-100
        {% endunless %}
      {% endif %}
    "
    {% if section.settings.enable_gradient %}
      style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) );"
    {% endif %}
  >
    <div
      class="
        flex w-full flex-row flex-wrap py-8
        {% if section.settings.enable_margin %}
          {{ settings.x_margin }}
        {% else %}
          window--full
        {% endif %}
        {{ section.settings.layout_x_alignment }}
        {{ section.settings.layout_y_alignment }}
        {{ section.settings.layout_y_spacing }}
      "
    >
      <div
        class="
          flex w-full flex-col gap-4
          {% if section.settings.enable_max_width %}max-w-prose{% endif %}
          {% if section.settings.layout_x_alignment contains 'text-center' %} items-center{% endif %}
          {% if section.settings.layout_x_alignment contains 'text-right' %} items-end{% endif %}
          {% if section.settings.enable_background_overlay %}
            p-4 w-full border--radius {{ section.settings.color_scheme }}
          {% endif %}
        "
      >
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'image' %}
              {% capture image_size %}
                height: {{ block.settings.image_height }}px;
                width: {{ block.settings.image_height | times: block.settings.image.aspect_ratio }}px;
              {% endcapture %}
              <div
                class="relative block items-center"
                style="{{ image_size }}"
              >
                {{
                  block.settings.image
                  | image_url: width: 400
                  | image_tag: class: 'w-full h-full !bg-transparent object-contain', alt: block.settings.image.alt
                }}
              </div>

            {% when 'heading' %}
              <h1
                class="{{ section.settings.color_text }}"
              >
                {{ block.settings.content }}
              </h1>

            {% when 'content' %}
              <div
                class="
                  rte
                  {{ section.settings.color_text }}
                "
              >
                {{ block.settings.content }}
              </div>

            {% when 'buttons' %}
              <div
                class="
                  flex flex-wrap gap-4 md:flex-nowrap
                  {% if section.settings.layout_x_alignment contains 'text-center' %}justify-center{% endif %}
                  {% if section.settings.layout_x_alignment contains 'text-right' %}justify-end{% endif %}
                "
              >
                {% unless block.settings.button_label == blank %}
                  {% if section.settings.url == blank %}
                    <a
                      href="{{ block.settings.button_url }}"
                      class="{{ block.settings.color_button }}"
                    >
                  {% else %}
                    <button
                      class="{{ block.settings.color_button }}"
                    >
                  {% endif %}
                  {{ block.settings.button_label }}
                  {% if section.settings.url == blank %}</a>{% else %}</button>{% endif %}
                {% endunless %}
                {% unless block.settings.secondary_button_label == blank %}
                  {% if section.settings.url == blank %}
                    <a
                      href="{{ block.settings.secondary_button_url }}"
                      class="{{ block.settings.secondary_color_button }}"
                    >
                  {% else %}
                    <button
                      class="{{ block.settings.secondary_color_button }}"
                    >
                  {% endif %}
                  {{ block.settings.secondary_button_label }}
                  {% if section.settings.url == blank %}</a>{% else %}</button>{% endif %}
                {% endunless %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>

  {% comment %} Spots {% endcomment %}
  {% for block in section.blocks %}
    <style>
      .position-{{ block.id }} {
        {% comment %} Mobile positioning with safety adjustment {% endcomment %}
        top: {{ block.settings.layout_y_alignment_mobile }}%;
        left: {{ block.settings.layout_x_alignment_mobile }}%;

        {% if block.settings.layout_y_alignment_mobile >= 90 %}
          top: 90%;
        {% endif %}

        {% if block.settings.layout_x_alignment_mobile >= 90 %}
          left: 90%;
        {% endif %}

        {% comment %} Desktop positioning with safety adjustment {% endcomment %}
        @media (min-width: 768px) {
          top: {{ block.settings.layout_y_alignment }}%;
          left: {{ block.settings.layout_x_alignment }}%;

          {% if block.settings.layout_y_alignment >= 90 %}
            top: 90%;
          {% endif %}

          {% if block.settings.layout_x_alignment >= 90 %}
            left: 90%;
          {% endif %}
        }
      }
    </style>
    {% case block.type %}
      {% when 'product' %}
        {% capture product_item %}
          <div
            class="absolute z-30 position-{{ block.id }}"
            x-data="{ show_product: false }"
            @click.outside="show_product = false"
            @mouseover="show_product = true"
          >
            <span
              class="inline-flex h-8 w-8 cursor-pointer"
            >
              <span
                class="color__bg-body absolute inline-flex h-8 w-8 animate-ping rounded-full"
                style="
                  animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
                  animation-delay: {{ forloop.index | times: 0.5 }}s;
                "
              >
              </span>
              <span class="color__bg-body color__text inline-flex h-8 w-8 items-center justify-center rounded-full opacity-50 shadow-md">
                {% render 'component__icon', icon: 'plus', size: '16', class: '' %}
              </span>
            </span>
            <div
              class="
                color__bg-body mt-2 min-w-[256px]
                {% unless settings.product_card_border_style == 'thumbnail' %}
                  p-4
                {% endunless %}
                {% if block.settings.layout_x_alignment > 50 %}
                  md:translate-x-[calc(-100%+1rem)]
                {% else %}
                  md:translate-x-0
                {% endif %}
                {% if block.settings.layout_x_alignment_mobile > 50 %}
                  translate-x-[calc(-100%+1rem)]
                {% endif %}
              "
              x-show="show_product"
              x-cloak
            >
              {% render 'component__product-grid', product: block.settings.product %}
            </div>
          </div>
        {% endcapture %}
        {% if is_approved_customer %}
          {{ product_item }}
        {% else %}
          {% if product.tags contains settings.account_hide_product_tag %}
            {% if settings.restricted_style == 'placeholder' %}
              {{ product_item }}
            {% endif %}
          {% else %}
            {{ product_item }}
          {% endif %}
        {% endif %}

      {% when 'link' %}
        <a
          class="group absolute z-20 flex justify-center position-{{ block.id }}"
          href="{{ block.settings.url }}"
        >
          <span
            class="inline-flex h-8 w-8 cursor-pointer"
          >
            <span
              class="color__bg-body absolute inline-flex h-8 w-8 animate-ping rounded-full"
              style="
                animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
                animation-delay: {{ forloop.index | times: 0.5 }}s;
              "
            >
            </span>
            <span class="color__bg-body color__text inline-flex h-8 w-8 items-center justify-center rounded-full opacity-50 shadow-md">
              {% render 'component__icon', icon: 'plus', size: '16', class: '' %}
            </span>
          </span>
          {% render 'component__tooltip',
            content: block.settings.title,
            background: 'body',
            text: 'dark',
            tip: 'center',
            container_class: 'mt-4'
          %}
        </a>
    {% endcase %}
  {% endfor %}
</section>

