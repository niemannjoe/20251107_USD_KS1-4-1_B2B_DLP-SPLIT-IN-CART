<!-- sections/slideshow.liquid -->
{% comment %}
  This is a banner component with either a background image or video and a text overlay.

    Globals:
    - layout_horizontal: {string} Class string to set horizontal margin.
    - enable_animations: {boolean} Global setting to determine if animations are enabled.
    - layout_header_overlap: {integer} Size when setting header overlap.

    Recommendations:
    - Use images or videos that contrast well with the text overlay.
{% endcomment %}

{% comment %} Set properties for image {% endcomment %}
{% liquid
  assign enable_lazy_load = true
  if section.index == 1
    assign enable_lazy_load = false
  endif
%}

{% capture slides %}
  {% for block in section.blocks %}
    {% liquid
      if block.settings.show_entire_image
        assign image_classes = ' object-contain'
      else
        assign image_classes = ' object-cover h-full w-full'
      endif
    %}
    <div 
      class="flex h-full w-full flex-none justify-center whitespace-normal md:snap-center"
      x-bind:data-slide="{{ forloop.index0 }}"
      x-show="index == {{ forloop.index0 }}"
      x-transition:enter="animation-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="animation-300"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0">

      {% if block.settings.url == blank %}
        <div
          class="
          group/banner relative block flex-grow no-underline hover:no-underline hover:!opacity-100
          {{ block.settings.color_scheme }}
          {{ block.settings.color_text }}
          {{ section.settings.layout_y_spacing }}
        ">
      {% else %}
        <a 
          href="{{ block.settings.url }}"
          class="
            group/banner relative block flex-grow no-underline hover:no-underline hover:!opacity-100
            {{ block.settings.color_scheme }}
            {{ block.settings.color_text }}
            {{ section.settings.layout_y_spacing }}
          ">
      {% endif %}

        {% comment %} Media {% endcomment %}
        <div 
          class="
            absolute h-full w-full
            {% if settings.enable_animations %}
              motion-safe:scroll-blurin-2-10
            {% endif %}
          ">
          
          {% comment %} Image background {% endcomment %}
          <div 
            class="animation-1000 absolute h-full w-full">

            {% comment %} Desktop image {% endcomment %}
            {% if block.settings.image_background_desktop %}
              <div class="absolute h-full w-full">
                {% render 'component__image',
                  image: block.settings.image_background_desktop,
                  max_width: 5760,
                  parent_class: 'h-full hidden md:block',
                  container_class: 'h-full w-full z-10',
                  image_class: image_classes,
                  crop_class: image_classes,
                  enable_lazy_load: enable_lazy_load
                %}
              </div>
            {% endif %}

            {% comment %} Mobile image {% endcomment %}
            {% if block.settings.image_background_mobile == blank %}
              {% if block.settings.image_background_desktop %}
                <div class="absolute h-full w-full">
                  {% render 'component__image',
                    image: block.settings.image_background_desktop,
                    max_width: 900,
                    parent_class: 'h-full block md:hidden',
                    container_class: 'w-full h-full z-10',
                    image_class: image_classes,
                    crop_class: image_classes,
                    enable_lazy_load: enable_lazy_load
                  %}
                </div>
              {% endif %}
            {% else %}
              <div class="absolute h-full w-full">
                {% render 'component__image',
                  image: block.settings.image_background_mobile,
                  max_width: 900,
                  parent_class: 'h-full block md:hidden',
                  container_class: 'w-full h-full z-10',
                  image_class: image_classes,
                  crop_class: image_classes,
                  enable_lazy_load: enable_lazy_load
                %}
              </div>
            {% endif %}
          </div>

          {% comment %} Video background {% endcomment %}
          {% unless block.settings.video_background == blank %}
            <div class="absolute bottom-0 left-0 right-0 top-0 z-10">
              {% render 'component__video', 
                video: section.settings.video_background,
                container_class: 'max-w-none md:min-h-full min-w-full h-full',
                video_class: 'object-cover',
                enable_custom_controls: false,
                enable_mute_toggle: false,
                enable_autoplay: true,
                enable_loop: true
              %}
            </div>
          {% endunless %}

        </div>

        {% comment %} Banner content {% endcomment %}
        <div 
          class="
            absolute z-10 h-full w-full
            {% if settings.enable_animations %}
              {% unless section.settings.layout_y_spacing == 'min-h-[250px] md:min-h-[350px]' %}
                motion-safe:scroll-blurinandout-5-100
              {% endunless %}
            {% endif %}
          "
          {% if block.settings.enable_gradient %}
            style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) );"
          {% endif %}>

          <div 
            class="
              flex h-full w-full flex-row flex-wrap py-16
              {{ block.settings.layout_x_alignment }}
              {{ block.settings.layout_y_alignment }}
              {% if section.settings.enable_margin %}
                {{ settings.x_margin }}
              {% else %}
                window--full
              {% endif %}
            ">

            <div 
              class="
                flex w-full flex-col gap-4
                {% if section.settings.enable_max_width %}max-w-prose{% endif %}
                {% if block.settings.layout_x_alignment contains 'text-center' %}items-center{% endif %}
                {% if block.settings.layout_x_alignment contains 'text-right' %}items-end{% endif %}
                {% if block.settings.enable_background_overlay %}
                  p-4 w-full border--radius {{ block.settings.color_scheme }}
                {% endif %}
              ">

              {% unless block.settings.heading == blank %}
                <h1 
                  class="m-0 ">
                  {{ block.settings.heading }}
                </h1>
              {% endunless %}

              {% unless block.settings.content == blank %}
                <div 
                  class="rte">
                  {{ block.settings.content }}
                </div>
              {% endunless %}

              {% unless block.settings.button_url == blank %}
                <div 
                  class="
                    flex flex-wrap gap-2 md:flex-nowrap
                    {% if block.settings.layout_x_alignment contains 'text-center' %}justify-center{% endif %}
                    {% if block.settings.layout_x_alignment contains 'text-right' %}justify-end{% endif %}
                  ">
                  {% if block.settings.url == blank %}
                    <a 
                      href="{{ block.settings.button_url }}"
                      class="{{ block.settings.color_button }}">
                  {% else %}
                    <button
                      class="{{ block.settings.color_button }}">
                  {% endif %}
                    {{ block.settings.button_label }}
                  {% if block.settings.url == blank %}</a>{% else %}</button>{% endif %}
                  {% unless block.settings.secondary_button_url == blank %}
                    {% if block.settings.url == blank %}
                      <a 
                        href="{{ block.settings.secondary_button_url }}"
                        class="{{ block.settings.secondary_color_button }}">
                    {% else %}
                      <button
                        class="{{ block.settings.secondary_color_button }}">
                    {% endif %}
                      {{ block.settings.secondary_button_label }}
                    {% if block.settings.url == blank %}</a>{% else %}</button>{% endif %}
                  {% endunless %}
                </div>
              {% endunless %}
              
            </div>

          </div>
        </div>
        
      {% if block.settings.url == blank %}</div>{% else %}</a>{% endif %}
    
    </div>
  {% endfor %} 
{% endcapture %}

<section
  class="
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
  "
>
  <div
    id="{{ section.id }}"
    class="
      group/banner
      relative flex items-center justify-center overflow-clip !no-underline hover:no-underline hover:opacity-100
      {{ section.settings.color_scheme }}
      {% if section.settings.enable_border_margin %}
        border--radius
      {% endif %}
    "
    {% if section.settings.url != blank %}
      tabindex="-1"
    {% endif %}
  >
    <div
      class="flex w-full flex-wrap"
      x-data="
        {
          index: 0,
          index_scroll: 0,
          index_size: {{ section.blocks.size | minus: 1 }},
          width: '0%',
          currentWidth: 0,

          incrementCount: {{ section.settings.auto_scroll_delay }}000 / 100,
          autoIncrement() {
            const incrementAmount = 100 / this.incrementCount;
            const startInterval = () => {
              const interval = setInterval(() => {
                this.currentWidth += incrementAmount;
                this.width = this.currentWidth + '%';
                if (this.currentWidth >= 100) {
                  this.scrollNext();
                  clearInterval(interval);
                  this.currentWidth = 0;
                  this.width = this.currentWidth + '%';
                  startInterval();
                }
              }, 100);
            };
            startInterval();
          },

          scrollNext() {
            if(this.index < this.index_size){
              this.index++
            } else {
              this.index = 0
            }
          },

          scrollBack() {
            if(this.index == 0){
              this.index = this.index_size
            } else {
              this.index--
            }
          }
        }
      "
    >
      {% comment %} Slideshow {% endcomment %}
      <div
        class="
          relative w-full
          {% if section.settings.enable_border_margin %}
            padding--gap
          {% endif %}
        "
      >
        {% comment %} Slides {% endcomment %}
        <div
          class="hidescrollbar relative inline-flex h-full w-full overflow-clip scroll-smooth whitespace-nowrap md:snap-x"
          x-ref="slider"
        >
          {{ slides }}
        </div>

        {% comment %} Arrows {% endcomment %}
        <button
          title="{{ 'actions.previous' | t }}"
          type="button"
          class="group absolute bottom-0 left-0 top-0 z-10 hidden w-12 cursor-w-resize items-center justify-center overflow-hidden pl-4 opacity-0 hover:opacity-100 md:flex"
          @click="scrollBack()"
        ></button>
        <button
          title="{{ 'actions.next' | t }}"
          class="group absolute bottom-0 right-0 top-0 z-10 hidden w-12 cursor-e-resize items-center justify-center overflow-hidden pr-4 opacity-0 hover:opacity-100 md:flex"
          @click="scrollNext()"
        ></button>

        {% comment %} Progress bar {% endcomment %}
        {% if section.settings.auto_scroll_delay > 0 %}
          <div
            class="color__bg-text absolute bottom-0 left-0 right-0 h-0.5 w-full opacity-75 mix-blend-difference"
            x-init="              autoIncrement()"
          >
            <div class="color__bg-text">
              <div
                class="color__bg-body h-0.5 opacity-50 transition-all duration-100"
                :style="{ width: width }"
              ></div>
            </div>
          </div>
        {% endif %}
      </div>

      {% comment %} Indicators {% endcomment %}
      <div
        class="
          absolute bottom-2 left-0 right-0 z-10 flex w-full flex-wrap items-center justify-center text-center
          {{ settings.x_margin }}
        "
      >
        <div
          class="color__bg-shade-3 relative flex w-auto items-center justify-center gap-2 rounded-full p-2"
        >
          <button
            class="color__light leading-none"
            style="cursor: w-resize;"
            title="{{ 'actions.previous' | t }}"
            type="button"
            @click="scrollBack();"
          >
            {% render 'component__icon', icon: 'chevron-small-left', size: '20', class: '' %}
          </button>
          {% for block in section.blocks %}
            <button
              aria-label="gallery_grid_button_0"
              class="animation-300--all focus-visible:border--focus--inset h-2 w-2 rounded-full bg-white opacity-75"
              :class="{ '!opacity-100 !w-6': index === {{ forloop.index0 }} }"
              @click="index = {{ forloop.index0 }}"
            >
              <span class="sr-only">{{ 'actions.next' | t }}</span>
            </button>
          {% endfor %}
          <button
            class="color__light leading-none"
            style="cursor: e-resize;"
            title="{{ 'actions.next' | t }}"
            type="button"
            @click="scrollNext();"
          >
            {% render 'component__icon', icon: 'chevron-small-right', size: '20', class: '' %}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

