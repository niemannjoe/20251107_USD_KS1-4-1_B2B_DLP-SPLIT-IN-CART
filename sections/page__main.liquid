<!-- sections/page__main.liquid -->
{% comment %}
  Empty page section for page template

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.

  Recommendations:
  - Create custom templates to use additional sections.
{% endcomment %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      flex
      {{ section.settings.layout_x_alignment }}
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% else %}
        window--full
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        w-full
        {% if section.settings.enable_max_width %}
          max-w-prose
        {% endif %}
      "
    >
      <h1 class="mb-4">
        {{ page.title | escape }}
      </h1>
      <div class="rte">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>

