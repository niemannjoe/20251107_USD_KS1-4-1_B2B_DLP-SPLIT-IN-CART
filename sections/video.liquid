    {
      "type": "text",
      "id": "heading",
      "label": "t:general.settings.heading.label"
    },
    {
      "type": "text",
      "id": "play_button_text",
      "label": "t:general.settings.play_button_text.label",
      "default": "Play"
    },
    {
      "type": "checkbox",
      "id": "enable_play_button_icon",
      "label": "t:general.settings.enable_play_button_icon.label",
      "default": true
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "t:general.settings.content.label"
    },
    {
      "type": "header",
      "content": "t:general.headers.spacing.content"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "t:general.settings.top_spacing.label",
      "default": 100
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "t:general.settings.bottom_spacing.label",
      "default": 100
    },
    {
      "type": "header",
      "content": "t:general.headers.color.content"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "t:general.settings.color_scheme.label",
