  "name": "t:sections.video.name",
  "settings": [
    {
      "type": "header",
      "content": "t:general.headers.content.content"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:general.settings.video.label"
    },
    {
      "type": "checkbox",
