{% comment %}
  Marquee section for Shopify liquid file.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.

  Recommendations:
  - Use this section to display a marquee of content.
{% endcomment %}

{% capture marquee_content %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'heading' %}
        <li class="flex items-center">
          <h3 class="type__heading-1">
            {{ block.settings.content }}
          </h3>
        </li>

      {% when 'content' %}
        <li class="flex items-center">
          <div
            class="
              rte w-60 max-w-prose whitespace-normal
              {{ block.settings.layout_x_alignment }}
            "
          >
            {{ block.settings.content }}
          </div>
        </li>

      {% when 'button' %}
        <li class="flex items-center">
          <a
            href="{{ block.settings.button_url }}"
            class="{{ block.settings.color_button }}"
          >
            {{ block.settings.button_label }}
          </a>
        </li>

      {% when 'image' %}
        {% unless block.settings.image == blank %}
          <li class="flex items-center">
            {% capture image_size %}
            height: {{ block.settings.image_height }}px;
            width: {{ block.settings.image_height | times: block.settings.image.aspect_ratio }}px;
          {% endcapture %}
            <div
              class="relative block items-center"
              style="{{ image_size }}"
            >
              {% render 'component__image',
                image: block.settings.image,
                max_width: 600, 
                crop_class: 'object-contain',
                image_class: 'w-full h-full',
                enable_lazy_load: true
              %}
            </div>
          </li>
        {% endunless %}
    {% endcase %}
  {% endfor %}
{% endcapture %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      relative overflow-hidden
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% else %}
        window--max-full
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
    {% unless section.settings.enable_margin %}
      :class="
        {
          'lg:window--max-fullmenuclamp' : menu_sidebar,
          {% if settings.cart_drawer_style == 'fixed' %}
            'lg:window--max-fullcartclamp' : cart_drawer
          {% endif %}
        }
      "
    {% endunless %}
  >
    <div
      class="relative flex gap-12 overflow-hidden"
    >
      {% comment %} Marquee content {% endcomment %}
      <ul
        class="motion-safe:animate-xscroll mb-0 flex min-w-full shrink-0 list-none justify-between gap-12 whitespace-nowrap p-0 py-2"
        style="
          animation-duration: {{ section.settings.animation_speed }}000ms;
          {% if section.settings.use_reverse_animation %}
            animation-direction: reverse;
          {% endif %}
        "
      >
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
      </ul>

      {% comment %} Cloned content {% endcomment %}
      <ul
        class="motion-safe:animate-xscroll mb-0 flex min-w-full shrink-0 list-none justify-between gap-12 whitespace-nowrap p-0 py-2"
        style="
          animation-duration: {{ section.settings.animation_speed }}000ms;
          {% if section.settings.use_reverse_animation %}
            animation-direction: reverse;
          {% endif %}
        "
        aria-hidden="true"
      >
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
        {{ marquee_content }}
      </ul>
    </div>
  </div>
</section>

