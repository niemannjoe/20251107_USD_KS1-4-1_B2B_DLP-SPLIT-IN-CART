<!-- sections/signup.liquid -->
{% comment %}
  Signup form to login or create an account.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
  - enable_animations: {boolean} Global setting to determine if animations are enabled.
  - layout_header_overlap: {integer} Size when setting header overlap.
{% endcomment %}

{% liquid
  assign is_approved_customer = false
  if customer.tags contains settings.account_matching_tags
    assign is_approved_customer = true
  endif
  if settings.account_match_b2b and customer.b2b?
    assign is_approved_customer = true
  endif
  if settings.account_enable_full_restriction == false
    assign is_approved_customer = true
  endif
  assign recover_redirect_url = '/account/login?recover'
%}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        flex flex-row flex-wrap gap-4 md:flex-nowrap
        {{ section.settings.layout_y_alignment }}
        {{ section.settings.layout_x_alignment }}
      "
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'form' %}
            <div
              class="
                top-0 flex flex-col gap-4 md:sticky
                {{ block.settings.layout_x_alignment }}
                {% if block.settings.layout_width_desktop == 12 %}
                  md:w-full
                {% else %}
                  md:w-{{ block.settings.layout_width_desktop }}/12
                {% endif %}
                {% if block.settings.layout_width_mobile == 12 %}
                  w-full
                {% else %}
                  w-{{ block.settings.layout_width_mobile }}/12
                {% endif %}
                {% unless section.settings.enable_margin %}
                  px-4
                {% endunless %}
                {% if settings.enable_animations %}
                  motion-safe:scroll-fadein-2-20
                {% endif %}
              "
            >
              <div class="top-0 flex flex-col gap-4 py-4 md:sticky">
                {% unless block.settings.heading == blank %}
                  <h3 class="type__heading-1">
                    {{ block.settings.heading }}
                  </h3>
                {% endunless %}

                {% unless block.settings.content == blank %}
                  <div class="rte">
                    {{ block.settings.content }}
                  </div>
                {% endunless %}

                {% if customer and is_approved_customer == false %}
                  <div class="color__bg-shade-1 type--small border--radius p-2">
                    {{ 'info.restricted_account' | t }}
                  </div>
                  <div>
                    <a
                      class="btn btn--plain"
                      href="{{ routes.account_logout_url }}"
                    >
                      {{- 'actions.log_out' | t -}}
                    </a>
                  </div>
                {% endif %}

                {% unless customer %}
                  <div
                    x-data="
                      {
                        {% if block.settings.default_form == 'login' %}
                          tab: window.location.hash === '#recover' ? 'recover' : 'login'
                        {% else %}
                          tab: window.location.hash === '#recover' ? 'recover' : 'signup'
                        {% endif %}
                      }
                    "
                  >
                    <div
                      x-show="tab === 'recover'"
                      x-cloak
                    >
                      {% assign form_id = section.id | append: '-recover' %}
                      {% form 'recover_customer_password', id: form_id, return_to: recover_redirect_url %}
                        {% assign recover_success = form.posted_successfully? %}

                        {%- if recover_success == true -%}
                          <div class="color__bg-shade-1 type--small border--radius p-2">
                            {{ 'info.recover_success' | t }}
                          </div>
                        {%- endif -%}

                        {% if form.errors %}
                          <div class="color__bg-shade-1 type--small border--radius mb-4 p-2">
                            {{ form.errors | default_errors }}
                          </div>
                        {% endif %}

                        <label for="{{ section.id }}_recover_email">{{ 'labels.email' | t }}</label><br>
                        <input
                          id="{{ section.id }}_recover_email"
                          class="mb-4"
                          type="email"
                          name="email"
                          placeholder="{{ 'actions.email_placeholder' | t }}"
                        >

                        <button
                          class="btn mb-4 {{ section.settings.color_button }}"
                          type="submit"
                        >
                          {{ 'actions.reset_password' | t }}
                        </button>

                        <div class="border--t-width color__border-divider-1 pt-4">
                          <button
                            type="button"
                            class="btn btn--plain"
                            @click.prevent="tab = 'login';"
                          >
                            {{ 'actions.log_in' | t }}
                          </button>
                        </div>

                        <input type="hidden" name="return_to" value="{{ request.path }}/?account">
                      {% endform %}
                    </div>

                    <div
                      x-show="tab === 'login'"
                      x-cloak
                    >
                      {% assign form_id = section.id | append: '-login' %}
                      {% form 'customer_login', id: form_id %}
                        {%- if recover_success == true -%}
                          <div class="color__bg-shade-1 type--small border--radius p-2">
                            {{ 'info.recover_success' | t }}
                          </div>
                        {%- endif -%}

                        {% if form.errors %}
                          <div class="color__bg-shade-1 type--small border--radius mb-4 p-2">
                            {{ form.errors | default_errors }}
                          </div>
                        {% endif %}

                        <label for="{{ section.id }}_login_customer_email">{{ 'labels.email' | t }}</label><br>
                        <input
                          id="{{ section.id }}_login_customer_email"
                          class="mb-4"
                          type="email"
                          name="customer[email]"
                          placeholder="{{ 'actions.email_placeholder' | t }}"
                        >

                        <label for="{{ section.id }}_login_customer_password">{{ 'labels.password' | t }}</label><br>
                        <input
                          id="{{ section.id }}_login_customer_password"
                          class="mb-4"
                          type="password"
                          name="customer[password]"
                          autocomplete
                          placeholder="{{ 'actions.enter_password' | t }}"
                        >

                        <button
                          class="btn mb-4 {{ section.settings.color_button }}"
                          type="submit"
                        >
                          {{ 'actions.log_in' | t }}
                        </button>

                        <div class="border--t-width color__border-divider-1 flex flex-col gap-4 pt-4">
                          <p>{{ 'info.dont_have_account' | t }}</p>
                          <div class="flex gap-4">
                            <button
                              class="btn btn--plain"
                              type="button"
                              @click="tab = 'recover';"
                            >
                              {{ 'actions.forgot_password' | t }}
                            </button>
                            <button
                              class="btn btn--plain"
                              type="button"
                              @click="tab = 'signup';"
                            >
                              {{ 'actions.sign_up' | t }}
                            </button>
                          </div>
                        </div>

                        <input type="hidden" name="return_to" value="{{ request.path }}/?account">
                      {% endform %}
                    </div>

                    <div
                      x-show="tab === 'signup'"
                      x-cloak
                    >
                      {% assign form_id = section.id | append: '-signup' %}
                      {% form 'create_customer', id: form_id %}
                        {%- if recover_success == true -%}
                          <div class="color__bg-shade-1 type--small border--radius p-2">
                            {{ 'info.recover_success' | t }}
                          </div>
                        {%- endif -%}

                        {% if form.errors %}
                          <div class="color__bg-shade-1 type--small border--radius mb-4 p-2">
                            {{ form.errors | default_errors }}
                          </div>
                        {% endif %}

                        <label
                          for="{{ section.id }}_signup_first_name"
                        >
                          {{- 'labels.name' | t -}}</label
                        ><br>
                        <input
                          id="{{ section.id }}_signup_first_name"
                          class="mb-4"
                          required
                          type="text"
                          name="customer[first_name]"
                          value=""
                          placeholder="{{ 'actions.name_placeholder' | t }}"
                        >

                        <label
                          for="{{ section.id }}_signup_customer_email"
                        >
                          {{- 'labels.email' | t -}}</label
                        ><br>
                        <input
                          id="{{ section.id }}_signup_customer_email"
                          class="mb-4"
                          required
                          type="email"
                          name="customer[email]"
                          placeholder="{{ 'actions.email_placeholder' | t }}"
                        >

                        <label
                          for="{{ section.id }}_signup_customer_password"
                        >
                          {{- 'labels.password' | t -}}</label
                        ><br>
                        <input
                          id="{{ section.id }}_signup_customer_password"
                          class="mb-4"
                          required
                          type="password"
                          name="customer[password]"
                          autocomplete
                          placeholder="{{ 'actions.enter_password' | t }}"
                        >

                        {% for block in section.blocks %}
                          <div class="w-full">
                            {% case block.settings.input_type %}
                              {% when 'textarea' %}
                                <label
                                  for="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                >
                                  {{ block.settings.input_label }}
                                </label>
                                <textarea
                                  id="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                  class="mb-4"
                                  rows="10"
                                  name="customer[note][{{ block.settings.input_label | handle }}]"
                                  placeholder="{{ block.settings.input_placeholder }}"
                                  {% if block.settings.enable_required_field %}
                                    required
                                  {% endif %}
                                ></textarea>

                              {% when 'input' %}
                                <label
                                  for="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                >
                                  {{ block.settings.input_label }}
                                </label>
                                <input
                                  id="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                  class="mb-4"
                                  type="text"
                                  name="customer[note][{{ block.settings.input_label | handle }}]"
                                  placeholder="{{ block.settings.input_placeholder }}"
                                  spellcheck="false"
                                  {% if block.settings.enable_required_field %}
                                    required
                                  {% endif %}
                                >

                              {% when 'checkbox' %}
                                <label
                                  class="mb-4 flex items-center gap-2"
                                  for="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                >
                                  <input
                                    id="{{ section.id }}_signup_{{ block.settings.input_label | handle }}"
                                    name="customer[note][{{ block.settings.input_label | handle }}]"
                                    type="checkbox"
                                    {% if block.settings.enable_required_field %}
                                      required
                                    {% endif %}
                                  >
                                  <span>
                                    {{ block.settings.input_label }}
                                  </span>
                                </label>
                            {% endcase %}
                          </div>
                        {% endfor %}

                        <button
                          class="btn mb-4 {{ section.settings.color_button }}"
                          type="submit"
                        >
                          {{ 'actions.sign_up' | t }}
                        </button>

                        <div class="border--t-width color__border-divider-1 flex flex-col gap-4 pt-4">
                          <p>{{ 'info.already_have_account' | t }}</p>
                          <div class="flex gap-4">
                            <button
                              class="btn btn--plain"
                              type="button"
                              @click="tab = 'recover';"
                            >
                              {{ 'actions.forgot_password' | t }}
                            </button>
                            <button
                              class="btn btn--plain"
                              type="button"
                              @click="tab = 'login';"
                            >
                              {{ 'actions.log_in' | t }}
                            </button>
                          </div>
                        </div>

                        <input type="hidden" name="return_to" value="{{ request.path }}/?account">
                      {% endform %}
                    </div>
                  </div>
                {% endunless %}
              </div>
            </div>

          {% when 'content' %}
            <div
              class="
                {% if block.settings.layout_width_desktop == 12 %}
                  md:w-full
                {% else %}
                  md:w-{{ block.settings.layout_width_desktop }}/12
                {% endif %}
                {% if block.settings.layout_width_mobile == 12 %}
                  w-full
                {% else %}
                  w-{{ block.settings.layout_width_mobile }}/12
                {% endif %}
              "
            >
              {% render 'component__content-item',
                heading: block.settings.heading,
                content: block.settings.content,
                button_label: block.settings.button_label,
                url: block.settings.url,
                image: block.settings.image,
                image_background: block.settings.image_background,
                video: block.settings.video,
                enable_autoplay: block.settings.enable_autoplay,
                enable_mute_toggle: block.settings.enable_mute_toggle,
                enable_loop: block.settings.enable_loop,
                color_scheme: block.settings.color_scheme,
                color_text: block.settings.color_text,
                color_border: block.settings.color_border,
                color_button: block.settings.color_button,
                enable_gradient: block.settings.enable_gradient,
                enable_radius: false,
                enable_padding: block.settings.enable_padding,
                enable_full_height: true,
                spacing_minimum_height: block.settings.spacing_minimum_height,
                layout_col_span_desktop: block.settings.layout_col_span,
                layout_row_span_desktop: block.settings.layout_row_span,
                layout_y_alignment: block.settings.layout_y_alignment,
                layout_x_alignment: block.settings.layout_x_alignment,
                text_position: block.settings.text_position
              %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

