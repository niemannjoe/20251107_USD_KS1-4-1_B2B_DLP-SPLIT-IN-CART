<!-- sections/article__banner.liquid -->
{% comment %}
  This is a banner component with article details and a background image

    Globals:
    - layout_horizontal: {string} Class string to set horizontal margin.
    - enable_animations: {boolean} Global setting to determine if animations are enabled.
    - layout_header_overlap: {integer} Size when setting header overlap.
    - type_separator: {string} Settting to set divider as a dot or line.

    Recommendations:
    - Use images that contrast well with the text overlay.
{% endcomment %}

{% comment %} Check if approved customer {% endcomment %}
{% liquid
  assign is_approved_customer = false
  if customer and settings.account_matching_tags == blank
    assign is_approved_customer = true
  endif
  if customer.tags contains settings.account_matching_tags
    assign is_approved_customer = true
  endif
  if settings.account_match_b2b and customer.b2b?
    assign is_approved_customer = true
  endif
%}

{% comment %} Set properties for image {% endcomment %}
{% liquid
  assign enable_lazy_load = true
  if section.index == 1
    assign enable_lazy_load = false
  endif
%}

{% capture article_capture %}
  <section 
    id="{{ section.id }}"
    class="
      relative flex items-center justify-center overflow-clip
      {{ section.settings.visibility }}
      {{ section.settings.color_scheme }} 
      {{ section.settings.color_border }}
      {{ section.settings.style_border }}
    ">

    {% comment %} Image background {% endcomment %}
    {% if section.settings.enable_image %}
      <div 
        class="
          absolute top-0 h-full w-full
          {% if settings.enable_animations %}
            motion-safe:scroll-blurin-2-10
          {% endif %}
        ">

        {% comment %} Images {% endcomment %}
        {% unless article.image == blank %}
          <div class="absolute h-full w-full">
            {% render 'component__image',
              image: article.image,
              max_width: 5760,
              parent_class: 'h-full hidden md:block',
              container_class: 'h-full w-full z-10',
              crop_class: 'object-cover',
              enable_lazy_load: enable_lazy_load
            %}
          </div>
          <div class="absolute h-full w-full">
            {% render 'component__image',
              image: article.image,
              max_width: 900,
              parent_class: 'h-full block md:hidden',
              container_class: 'w-full h-full z-10',
              crop_class: 'object-cover',
              enable_lazy_load: enable_lazy_load
            %}
          </div>
        {% endunless %}
        
      </div>
    {% endif %}

    {% comment %} Banner content {% endcomment %}
    <div 
      class="
        relative z-10 h-full w-full
        {% if settings.enable_animations %}
          {% unless section.settings.layout_y_spacing == 'min-h-[100px] md:min-h-[150px]' %}
            motion-safe:scroll-blurinandout-5-100
          {% endunless %}
        {% endif %}
      "
      {% if section.settings.enable_gradient %}
        style="background: linear-gradient( to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.4) );"
      {% endif %}>
      <div 
        class="
          flex w-full flex-row flex-wrap py-4
          {% if section.settings.enable_margin %}
            {{ settings.x_margin }}
          {% else %}
            window--full
          {% endif %}
          {{ section.settings.layout_x_alignment }}
          {{ section.settings.layout_y_alignment }}
          {{ section.settings.layout_y_spacing }}
          {{ section.settings.color_text }}
          {% assign colors = section.settings.color_scheme | split: " " %}{{ colors[1] }}
        ">

        <div 
          class="
            flex flex-col gap-2
            {% if section.settings.enable_max_width %}max-w-3xl{% endif %}
            {% if section.settings.enable_background_overlay %}
              p-4 w-full border--radius {{ section.settings.color_scheme }}
            {% endif %}
          ">

          {% comment %} Author + Date {% endcomment %}
          <div class="flex w-full flex-wrap items-center gap-x-2 gap-y-1 {{ section.settings.layout_x_alignment }}">

            {% comment %} Author {% endcomment %}
            {% if section.settings.enable_author %}
              <div class="flex items-center gap-2">
                <div class="border__button--radius color__bg-shade-2 type--small relative flex h-6 w-6 items-center justify-center">
                  {{ article.author | slice: 0 | upcase }}
                </div>
                <div class="type--smaller space-y-4 opacity-75">
                  {{ article.author }}
                </div>
              </div>
            {% endif %}

            {% comment %} Date {% endcomment %}
            {% if section.settings.enable_date %}
              <span class="type--smaller opacity-75">{{ article.published_at | date: format: 'abbreviated_date' }}</span>
            {% endif %} 
          
          </div>

          {% comment %} Title {% endcomment %}
          {% unless article.title == blank %}
            <h1>{{ article.title }}</h1>
          {% endunless %}

          {% comment %} Tags {% endcomment %}
          <div class="flex w-full gap-2
            {{ section.settings.layout_x_alignment }}"> 
            {% if section.settings.enable_tags %}
              <span class="type--small opacity-75">
                {% for tag in article.tags %}
                  {% if settings.type_separator == 'dot' %}Â·{% else %}|{% endif %} {{ tag }}
                {% endfor %}
              </span>
            {% endif %}
          </div>
          
        </div>
      </div>
    </div>

  </section>
{% endcapture %}

{% if is_approved_customer == true %}
  {{ article_capture }}
{% else %}
  {% unless article.tags contains settings.account_hide_blog_tag %}
    {{ article_capture }}
  {% endunless %}
{% endif %}

