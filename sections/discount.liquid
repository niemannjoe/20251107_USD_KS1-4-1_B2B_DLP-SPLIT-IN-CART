<!-- sections/discount.liquid -->
{% comment %}
  Show a discount code customers can copy to their clipboard

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
  - enable_animations: {boolean} Global setting to determine if animations are enabled.

  Recommendations:
    - Use this section to highlight active discounts
{% endcomment %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        flex flex-wrap justify-between
        {% unless section.settings.enable_split %}
          {{ section.settings.layout_x_alignment }}
        {% endunless %}
        {% if section.settings.enable_split %}
          flex-row
        {% else %}
          flex-col
        {% endif %}
      "
    >
      {% comment %} Header {% endcomment %}
      <div
        class="
          flex w-full flex-col
          {% if section.settings.enable_split %}
            md:w-1/3 md:pr-4 md:sticky md:top-4 md:self-start
          {% endif %}
          {% unless section.settings.enable_margin %}
            px-4
          {% endunless %}
        "
      >
        {% render 'component__section-header' %}
      </div>

      {% comment %} Discount {% endcomment %}
      <div
        class="
          h-auto w-full max-w-prose
          {{ section.settings.layout_x_alignment }}
          {% if section.settings.enable_split %}md:w-2/3{% endif %}
          {% unless section.settings.enable_margin %}
            px-4
          {% endunless %}
        "
      >
        <div
          class="flex w-full gap-4 "
          x-data="
            {
              button_text: '{{ 'actions.copy' | t }}'
            }
          "
        >
          <label
            class="sr-only"
            for="{{ section.id }}_coupon"
          >
          </label>
          <input
            id="{{ section.id }}_coupon"
            class="flex-grow select-all"
            type="text"
            placeholder=""
            autocorrect="off"
            autocapitalize="off"
            value="{{ section.settings.code }}"
            disabled
          >
          <button
            class="
              btn--smaller shrink-0 whitespace-nowrap
              {{ section.settings.color_button }}
            "
            type="submit"
            @click="
              copyToClipboard('{{ section.id }}_coupon');
              button_text = '{{ 'actions.copied' | t }}';
            "
          >
            <span
              class="btn__content"
              x-text="button_text"
            >
              {{ 'actions.copy' | t }}
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

