<!-- sections/icon-grid.liquid -->
{% comment %}
  Grid of icon cards.

  Globals:
  - layout_horizontal: {string} Class string to set horizontal margin.
  - layout_gap_size: {integer} Set the gap between grid items.

  Recommendations:
  - Can be used to show a variety of different content.
{% endcomment %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }}
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        flex flex-wrap items-start justify-between
        {% if section.settings.enable_split %}
          flex-row
        {% else %}
          flex-col
        {% endif %}
      "
    >
      {% comment %} Header {% endcomment %}
      <div
        class="
          flex w-full flex-col
          {% if section.settings.enable_split %}
            md:w-1/3 md:pr-4 md:sticky md:top-4 md:self-start
          {% endif %}
          {% unless section.settings.enable_margin %}
            px-4
          {% endunless %}
        "
      >
        {% render 'component__section-header' %}
      </div>

      {% comment %} Grid {% endcomment %}
      <div
        class="
          w-full
          {% if section.settings.enable_split %}md:w-2/3{% endif %}
        "
      >
        <div
          class="
            grid w-full
            md:grid-cols-{{ section.settings.layout_row_desktop }}
            grid-cols-{{ section.settings.layout_row_mobile }}
          "
          style="
            gap: {{ settings.gap_size }}px;
            {% unless section.settings.enable_margin %}
              padding-left: {{ settings.gap_size }}px;
              padding-right: {{ settings.gap_size }}px;
            {% endunless %}
          "
        >
          {% for block in section.blocks %}
            <div
              class="
                {{ block.settings.layout_col_span }}
                {{ block.settings.layout_row_span }}
              "
            >
              <div
                class="
                  border--radius flex h-full
                  {{ block.settings.color_scheme }}
                  {{ block.settings.color_border }}
                  {% if block.settings.enable_padding %}px-4 py-8{% endif %}
                "
              >
                <div
                  class="
                    flex w-full flex-wrap gap-2
                    {{ block.settings.alignment }}
                    {{ block.settings.layout_x_alignment }}
                    {% if block.settings.alignment == 'flex-row' %}
                      !items-center
                    {% endif %}
                  "
                >
                  {% comment %} Icon {% endcomment %}
                  {% if block.settings.icon == blank %}
                    <div class="relative">
                      <span class="color__bg-shade-2 border--radius block h-16 w-16">
                        {{ 'product-1' | placeholder_svg_tag: 'w-full' }}
                      </span>
                    </div>
                  {% else %}
                    <div
                      class="
                        relative
                        {{ block.settings.icon_height }}
                      "
                    >
                      {% capture icon_classes %}
                        !bg-transparent w-auto m-auto {{ block.settings.icon_height }}
                      {% endcapture %}
                      {% render 'component__image',
                        image: block.settings.icon,
                        max_width: 600,
                        container_class: icon_classes,
                        image_class: 'h-full w-auto',
                        crop_class: 'object-contain',
                        enable_lazy_load: true
                      %}
                    </div>
                  {%- endif -%}

                  {% comment %} Content {% endcomment %}
                  <div class="flex flex-1 flex-col gap-1">
                    {% unless block.settings.heading == blank %}
                      <h3 class="type__heading type__heading-5">{{ block.settings.heading }}</h3>
                    {% endunless %}

                    {% unless block.settings.content == blank %}
                      <div class="rte">
                        {{ block.settings.content }}
                      </div>
                    {% endunless %}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

