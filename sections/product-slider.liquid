<!-- sections/product-slider.liquid -->
{% comment %}
  Slider of products.

  Globals:
  - account_matching_tags: {string} Sets the tags that match approved customers.
  - account_hide_product_tag: {string} Sets the tag that hides products from certain accounts.
  - restricted_style: {string} Sets the style for restricted content.
  - layout_horizontal: {string} Horizontal margin from global theme settings.
{% endcomment %}

{% comment %} Check if approved customer {% endcomment %}
{% liquid
  assign is_approved_customer = false
  if customer and settings.account_matching_tags == blank
    assign is_approved_customer = true
  endif
  if customer.tags contains settings.account_matching_tags
    assign is_approved_customer = true
  endif
  if settings.account_match_b2b and customer.b2b?
    assign is_approved_customer = true
  endif
%}

{% comment %} Card width snippet {% endcomment %}
{% capture card_width %}
  {% if section.settings.card_width_desktop == 12 %}
    md:w-full
  {% else %}
    md:w-{{ section.settings.card_width_desktop }}/12
  {% endif %}
 {% if section.settings.card_width_mobile == 12 %}
    w-full
  {% else %}
    w-{{ section.settings.card_width_mobile }}/12
  {% endif %} 
{% endcapture %}

{% comment %} Set slider size {% endcomment %}
{% assign slider_size = collections[section.settings.collection].products.size
  | at_most: section.settings.products_count
  | minus: 1
%}
{% assign has_blocks = false %}
{% if section.blocks.size > 0 %}
  {% assign has_blocks = true %}
{% endif %}

{% comment %} Capture slides {% endcomment %}
{% capture slides %}

  {% comment %} Card blocks {% endcomment %}
  {% for block in section.blocks %}
    {% assign slider_size = slider_size | plus: 1 %}
    <div
      class=" 
        js-slider-item flex flex-none snap-center justify-center whitespace-normal
        {{ card_width }}
      " 
      x-bind:data-slide="{{ forloop.index0 }}"
      x-intersect:enter.half="index = {{ forloop.index0 }};">
      {% render 'component__content-item',
        heading: block.settings.heading,
        content: block.settings.content,
        button_label: block.settings.button_label,
        url: block.settings.url,
        image: block.settings.image,
        image_background: block.settings.image_background,
        video: block.settings.video,
        enable_autoplay: block.settings.enable_autoplay,
        enable_mute_toggle: block.settings.enable_mute_toggle,
        enable_loop: block.settings.enable_loop,
        color_scheme: block.settings.color_scheme,
        color_text: block.settings.color_text,
        color_border: block.settings.color_border,
        color_button: block.settings.color_button,
        enable_gradient: block.settings.enable_gradient,
        enable_padding: block.settings.enable_padding,
        spacing_minimum_height: block.settings.spacing_minimum_height,
        layout_col_span_desktop: block.settings.layout_col_span,
        layout_row_span_desktop: block.settings.layout_row_span,
        layout_y_alignment: block.settings.layout_y_alignment,
        layout_x_alignment: block.settings.layout_x_alignment,
        text_position: block.settings.text_position
      %}
    </div>
  {% endfor %}

  {% comment %} Selected collection {% endcomment %}
  {% for product in collections[section.settings.collection].products limit: section.settings.products_count %}
    {% capture product_item %}
      <div
        class=" 
          js-slider-item flex flex-none snap-center justify-center whitespace-normal
          {{ card_width }}
        " 
        x-bind:data-slide="{% if has_blocks %}{{ forloop.index0 | plus: section.blocks.size }}{% else %}{{ forloop.index0 }}{% endif %}"
        x-intersect:enter.half="index = {% if has_blocks %}{{ forloop.index0 | plus: section.blocks.size }}{% else %}{{ forloop.index0 }}{% endif %};">
        {% render 'component__product-grid', product: product %}
      </div>
    {% endcapture %}
    {% if is_approved_customer %}
      {{ product_item }}
    {% else %}
      {% if product.tags contains settings.account_hide_product_tag %}
        {% if settings.restricted_style == 'placeholder' %}
          {{ product_item }}
        {% endif %}
      {% else %}
        {{ product_item }}
      {% endif %}
    {% endif %}
  {% endfor %}

  {% comment %} Show placeholder in design mode {% endcomment %}
  {% if request.design_mode and section.settings.collection == null  %}
    {% for product in collections['all'].products limit: section.settings.products_count %}
      <div
        class=" 
          js-slider-item flex flex-none snap-center justify-center whitespace-normal
          {{ card_width }}
        " 
        x-bind:data-slide="{{ forloop.index0 }}"
        x-intersect:enter.half="index = {{ forloop.index0 }};">
        {% render 'component__product-grid', product: product %}
      </div>
    {% endfor %}
  {% endif %}

{% endcapture %}

<section
  id="{{ section.id }}"
  class="
    animation-1000
    {{ section.settings.visibility }}
    {{ section.settings.color_border }}
    {{ section.settings.style_border }}
    {{ section.settings.color_scheme }}
  "
>
  <div
    class="
      {% if section.settings.enable_margin %}
        {{ settings.x_margin }} !px-0
      {% endif %}
    "
    style="
      padding-top:{{ section.settings.spacing_top }}px;
      padding-bottom:{{ section.settings.spacing_bottom }}px;
    "
  >
    <div
      class="
        flex flex-wrap items-start justify-between
        {% if section.settings.enable_split %}
          flex-row
        {% else %}
          flex-col
        {% endif %}
      "
    >
      {% comment %} Header {% endcomment %}
      <div
        class="
          flex w-full flex-col px-4
          {% if section.settings.enable_split %}
            md:w-1/3 md:pr-4 md:sticky md:top-4 md:self-start
          {% endif %}
        "
      >
        {% render 'component__section-header' %}
      </div>

      {% comment %} Render slider {% endcomment %}
      <div
        class="
          w-full
          {% if section.settings.enable_split %}md:w-2/3{% endif %}
        "
      >
        {% render 'component__slider',
          container_class: '',
          slider_size: slider_size,
          slides: slides,
          enable_arrows: section.settings.enable_arrows,
          enable_arrows_over: false,
          enable_indicators: section.settings.enable_indicators,
          enable_scrollbar: section.settings.enable_scrollbar,
          enable_scroll_margin: false,
          layout_arrow_alignment: section.settings.layout_arrow_alignment
        %}
      </div>
    </div>
  </div>
</section>

